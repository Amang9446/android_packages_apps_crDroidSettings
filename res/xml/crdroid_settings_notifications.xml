<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lineage="http://schemas.android.com/apk/res/lineageos.platform"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/notifications_title">

    <PreferenceScreen
        android:icon="@drawable/ic_power_notification"
        android:title="@string/power_notification_title"
        android:summary="@string/power_notification_summary">
            <intent android:action="com.android.settings.action.POWER_NOTIF_CONTROLS" />
    </PreferenceScreen>

    <com.crdroid.settings.preferences.SystemSettingSwitchPreference
        android:key="force_expanded_notifications"
        android:icon="@drawable/ic_expanded_notification"
        android:title="@string/force_expanded_notifications_title"
        android:summary="@string/force_expanded_notifications_summary" />

    <PreferenceCategory
        android:title="@string/light_brightness_category">

        <lineageos.preference.LineageSystemSettingSwitchPreference
            android:key="allow_lights"
            android:icon="@drawable/ic_led_on"
            android:title="@string/zen_allow_lights"
            android:summary="@string/zen_allow_lights_summary"
            android:defaultValue="true" />

        <!-- Battery light -->
       <org.lineageos.internal.lineageparts.LineagePartsPreference
            android:key="battery_lights"
            android:icon="@drawable/ic_led_on"
            lineage:requiresConfig="@*lineageos.platform:integer/config_deviceLightCapabilities"
            lineage:requiresConfigMask="64"
            android:dependency="allow_lights" />

        <!-- Notification lights -->
        <org.lineageos.internal.lineageparts.LineagePartsPreference
            android:key="notification_lights"
            android:icon="@drawable/ic_led_on"
            lineage:requiresConfig="@*android:bool/config_intrusiveNotificationLed"
            lineage:replacesKey="notification_pulse"
            android:dependency="allow_lights" />
    </PreferenceCategory>

